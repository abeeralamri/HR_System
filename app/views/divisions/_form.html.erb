<%= form_with(model: division) do |form| %>
  <% if division.errors.any? %>
    <div style="color: red">
          <h2> <%= t 'globals.forms.messages.errors.multiple errors', count: division.errors.count %> </h2>


      <ul>
        <% division.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "mb-1">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div class = "mb-1">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

   <div class = "mb-1">
   
    <%= form.label :team, style: "display: block" %>
    <%= form.collection_select :team, Team.all, :id, :name, include_blank: true %>

  </div>

  <div class = "mb-1">
     <% all_emp = Employee.all.map { |e| [e.name] } %>
    <%= form.label :manager, style: "display: block" %>
    <%= form.select(:manager, options_for_select(all_emp), include_blank: true) %>
  </div>

  <div class = "mb-1">
    <%= form.submit t("Create division"), class: "btn btn-primary"%>
  </div>
<% end %>

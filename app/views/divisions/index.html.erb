
<h2><%= t "Divisions"%></h2>
<%= link_to t("New division"), new_division_path, style: "color: black;" %>

<div id="divisions">
 
<table class="table">
  <thead>
    <tr>
    
      <th scope="col"><%= t "ID"%></th>
      <th scope="col"><%= t "Name"%></th>
      <th scope="col"><%= t "Team"%></th>
      <th scope="col"><%= t "Manager"%></th>
      <th scope="col"><%= t "Description"%></th>
      <th scope="col"><%= t "Action"%></th>

    </tr>
  </thead>
  <tbody>
    <% @divisions.each do |division| %>
      <tr>
      
        <td><%= division.id %></td>
        <td><%= division.name %></td>
        <td>
        <% if Team.find_by(id: division.team) == nil %>
            None 
          <%else%>
              <%= Team.find_by(id: division.team).name %> 
          <%end%>
        <%=  %>
        </td>
        <td><%= division.manager %></td>
        <td><%= division.description %></td>
 
        <td><button class =  "btn btn-dark"><%= link_to "Edit", edit_division_path(division) %></button> </td>
        <td> <%= button_to "Delete", division, method: :delete, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


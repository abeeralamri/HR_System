<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
    <h2> <%= t 'globals.forms.messages.errors.multiple errors', count: employee.errors.count %> </h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "mb-1">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class = "mb-1">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class = "mb-3">
    <%= form.label :job, style: "display: block" %>
    <%= form.text_field :job, class: "form-control" %>
  </div>

  <div class = "mb-3">
    <%= form.label :salary, style: "display: block" %>
    <%= form.text_field :salary, class: "form-control" %>
  </div>

  <div class = "mb-3">
   
    <%= form.label :team_id, style: "display: block" %>
    <%= form.collection_select :team_id, Team.all, :id, :name, include_blank: true, class: "form-control" %>

  </div>
  
  <div class = "mb-3">
    <%= form.label :division_id, style: "display: block" %>
    <%= form.collection_select :division_id, Division.all, :id, :name, include_blank: true, class: "form-control"%>
  </div>


  <div class = "mb-1">
    <%= form.label :employee_status, style: "display: block" %>
    <%= form.text_field :employee_status, class: "form-control" %>
  </div>

  <div class = "mb-1">
    <%= form.submit t("Create Employee"), class: "btn btn-primary"%>
  </div>
<% end %>

  </div>
      </ul>
    </div>
  </div>
</nav>
<%= render "shared/side_navbar" %>
  <div class="container" style= "margin-left:160px; margin-top:-45%; margin-bottom:30%">  
    <% if flash[:alert] %>
        <div class="alert alert-warning mt-4" role="alert">
          <%= flash[:alert] %>
        </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert alert-info mt-4" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:error] %>
      <div class="alert alert-danger mt-4" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>
   
    <%= yield %>
  </div>
  <%= render "shared/footer"%>
</body>

</html>

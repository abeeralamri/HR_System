<%= form_with(model: target) do |form| %>
  <% if target.errors.any? %>
    <div style="color: red">
    <h2> <%= t 'globals.forms.messages.errors.multiple errors', count: target.errors.count %> </h2>

      <ul>
        <% target.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "mb-1">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class = "mb-1">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class = "mb-1">
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class = "mb-1">
    <%= form.label :finish_date, style: "display: block" %>
    <%= form.date_field :finish_date, class: "form-control"%>
  </div>

  <div class = "mb-1">
    <%= form.label :team_id, style: "display: block" %>
    <%= form.collection_select :team_id, Team.all, :id, :name, include_blank: true %>
  </div>

  <div class = "mb-1">
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status, class: "form-control"%>
  </div>

  <div class = "mb-1">
    <%= form.submit t("Create Target"), class: "btn btn-primary"%>
  </div>
<% end %>
